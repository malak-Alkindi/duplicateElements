package libary;

import java.util.HashMap;
import java.util.Scanner;
import java.io.Console;
import java.util.ArrayList;
import java.util.List;

public class main {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		boolean conditon = true;
		String check = "";
		int arrayListIndex = 0;
		boolean checkState = true;
		List<Book> books = new ArrayList<>();

		System.out.println("create object changing of class book ? y/n");

		while (conditon) {

			while (checkState) {
				check = sc.next().toLowerCase();
				boolean ch1 = check.equals("y");
				boolean ch2 = check.equals("n");

				if (ch1 || ch2) {
					

					if (check.equals("n")) {
						System.out.println("bye !!");
						conditon = false;
						checkState = false;
					} else {
						sc.nextLine();

						books.add(new Book());
						books.get(arrayListIndex).setId(arrayListIndex);
						System.out.println();

						System.out.println("------------------------libary----------------------");
						System.out.println("enter the  book author name");
						
						Book booksList = books.get(arrayListIndex);
						booksList.setAuthor(sc.nextLine());

						System.out.println("enter the name of chapter");
						booksList.assignNewChapter();
						Chapter chapterArray = booksList.chptr[arrayListIndex];
						chapterArray.setName(sc.nextLine());

						System.out.println("enter the number of porgraphs");
						chapterArray.poergraoh.setNumber(sc.nextInt());

						System.out.println("enter the word type");
						chapterArray.poergraoh.word.setType(sc.next());

						System.out.println();
						System.out.println("----------------------------------------------");
						System.out.println("book number: " + arrayListIndex);
						System.out.println(" book author :" + booksList.getAuther());
						System.out.println("chapter name :" + chapterArray.getName());
						System.out.println("porgrapgh number :" + chapterArray.poergraoh.getNumber());
						System.out.println("world type :" + chapterArray.poergraoh.word.getType());
						System.out.println();
						System.out.println("----------------------------------------------");
						System.out.println("do you want add another obejct ? y or n ");
						check = sc.nextLine().toLowerCase();
						arrayListIndex++;
					}
				} else {
					System.out.println("pls enter avalid input y or n");
					check = sc.nextLine().toLowerCase();
					ch1 = check.equals("y");
					ch2 = check.equals("n");
				}
			}

		}
		System.out.println();
		System.out.println("------------------------libary report ----------------------");

		for (int i = 0; i < books.size(); i++) {
			System.out.println("                      book number ("+i+")");
			System.out.println(" book author :" + books.get(i).getAuther());
			System.out.println("chapter name :" + books.get(i).chptr[i].getName());
			System.out.println("porgrapgh number :" +books.get(i).chptr[i].poergraoh.getNumber());
			System.out.println("world type :" +books.get(i).chptr[i].poergraoh.word.getType());
			System.out.println();
			System.out.println("----------------------------------------------");
		}

	}

}
