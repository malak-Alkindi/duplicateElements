package collage;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class main {

	public static void main(String[] args) {
		List<school> schoolList = new ArrayList<>();
		Scanner sc = new Scanner(System.in);

		int schoolIndex = 0;
		boolean schoolCheck = true;
		System.out.println("new school");
		while (schoolCheck) {// SCHOOL
	
			schoolList.add(new school());
			school schoolObj = schoolList.get(schoolIndex);
			int departmentindex = 0;
			boolean departmentCheck = true;
				
			if (sc.next().equals("y")) {

				while (departmentCheck) {// department
					System.out.println("do you want to add new department ?");
					schoolObj.addNewDepartment(new Department());
				
					Department departmentObj = schoolObj.getDepartment(departmentindex);
				int teachertIndex = 0;
					boolean  teacherCheck = true;
					if (sc.next().equals("y")) {
	
						
						while (teacherCheck) {// teacher
							System.out.println("do you want to add new teahcher ?");
							departmentObj.addNewTeacher(new Teacher());
							Teacher teacherObj = departmentObj.getTeacher(teachertIndex);
							int studentIndex = 0;
							boolean  studentCheck = true;
							if (sc.next().equals("y")) {
							
								while (studentCheck) {// student
									System.out.println("do you want to add new student ?");
									teacherObj.addNewStudent(new Student());
									Student studentObj = teacherObj.getStudent(studentIndex);
									int courseIndex = 0;
									boolean  courseCheck = true;
									if (sc.next().equals("y")) {

										while (courseCheck) {// course
											System.out.println("do you want to add new course ?");
											studentObj.addNewCourse(new Course());
											Course courseObj = studentObj.getCourse(courseIndex);
													int markIndex = 0;
											boolean  markCheck = true;
											if (sc.next().equals("y")) {


												while (markCheck) {// mark
													System.out.println("do you want to add new mark ?");
													courseObj.addNewmark(new Mark());
													Mark markObj = courseObj.getMark(markIndex);
													if (sc.next().equals("y")) {

														markIndex++;
													} else {
														System.out.println("mark finshed");
														markCheck = false;
													}
												} //mark
												
												courseIndex++;
											} else {
												System.out.println("course finshed");
												courseCheck = false;
											}
										} //course
										
										studentIndex++;
									} else {
										System.out.println("student finshed");
										studentCheck= false;
									}
								} //student
								
								teachertIndex++;
							} else {
								System.out.println("teacher finshed");
								teacherCheck = false;
							}
						} // // teacher
						
						departmentindex++;
					} else {
						System.out.println("department finshed");
						departmentCheck=false;
					}
				} // department
				System.out.println("do you want to add new school ?");
				schoolIndex++;
			} else {
				System.out.println("school finshed");
				schoolCheck = false;
			}
		} // SCHOOL

	}

}
